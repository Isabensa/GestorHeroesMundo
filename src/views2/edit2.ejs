<div class="contenedor-dashboard">
  <h2 class="titulo-dashboard">‚úèÔ∏è Editar Pa√≠s</h2>

  <!-- üîç Buscar pa√≠s por ID -->
  <form action="/paises/editar/buscar" method="POST" class="formulario-pais">
    <div class="form-grupo">
      <label for="idPais">ID del Pa√≠s:</label>
      <input 
        type="text" 
        id="idPais" 
        name="idPais" 
        required 
        value="<%= pais && pais.id ? pais.id : '' %>">
    </div>

    <div class="botones-form">
      <button type="submit" class="btn-agregar">üîç Buscar Pa√≠s</button>
      <button type="button" class="btn-volver" onclick="window.location.href='/paises/dashboard'">‚Üê Volver al Dashboard</button>
    </div>
  </form>

  <!-- üö® Mensajes de error -->
  <% if (errors && errors.length > 0) { %>
    <div class="error-messages">
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <!-- üìù Formulario de edici√≥n -->
  <% if (pais) { %>
    <form action="/paises/editar/<%= pais.id %>" method="POST" class="formulario-pais">

      <div class="form-grupo">
        <label for="name">Nombre:</label>
        <input type="text" id="name" name="name" value="<%= pais.name || '' %>">
      </div>

      <div class="form-grupo">
        <label for="capital">Capital:</label>
        <input type="text" id="capital" name="capital" value="<%= pais.capital || '' %>">
      </div>

      <div class="form-grupo">
        <label for="borders">Fronteras:</label>
        <input type="text" id="borders" name="borders" value="<%= Array.isArray(pais.borders) ? pais.borders.join(', ') : (pais.borders || '') %>">
      </div>

      <div class="form-grupo">
        <label for="area">√Årea (km¬≤):</label>
        <input type="number" id="area" name="area" value="<%= pais.area || '' %>">
      </div>

      <div class="form-grupo">
        <label for="population">Poblaci√≥n:</label>
        <input type="number" id="population" name="population" value="<%= pais.population || '' %>">
      </div>

      <div class="form-grupo">
        <label for="gini">√çndice GINI:</label>
        <input type="number" id="gini" name="gini" step="0.01" value="<%= pais.gini || '' %>">
      </div>

      <div class="form-grupo">
        <label for="region">Regi√≥n:</label>
        <input type="text" id="region" name="region" value="<%= pais.region || '' %>">
      </div>

      <div class="form-grupo">
        <label for="subregion">Subregi√≥n:</label>
        <input type="text" id="subregion" name="subregion" value="<%= pais.subregion || '' %>">
      </div>

      <div class="form-grupo">
        <label for="timezones">Zonas Horarias:</label>
        <input type="text" id="timezones" name="timezones" value="<%= Array.isArray(pais.timezones) ? pais.timezones.join(', ') : (pais.timezones || '') %>">
      </div>

      <div class="botones-form">
        <button type="submit" class="btn-agregar">üíæ Guardar Cambios</button>
      </div>
    </form>
  <% } %>
</div>
