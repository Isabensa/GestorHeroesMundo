<div class="contenedor-dashboard">
  <h2 class="titulo-dashboard">üåç Dashboard de Pa√≠ses</h2>

  <div class="botones-dashboard">
    <button class="btn-agregar" onclick="window.location.href='/paises/agregar'">Agregar Pa√≠s</button>
    <button class="btn-editar" onclick="window.location.href='/paises/editar'">Editar Pa√≠s</button>
    <button class="btn-borrar" onclick="window.location.href='/paises/eliminar'">Borrar Pa√≠s</button>
  </div>

  <div class="tabla-container">
    <table class="tabla-paises">
      <thead>
        <tr>
          <th>N¬∞</th>
          <th>ID</th>
          <th>Nombre</th>
          <th>Capital</th>
          <th>Fronteras</th>
          <th>√çndice GINI</th>
          <th>Poblaci√≥n</th>
          <th>√Årea</th>
          <th>Zonas Horarias</th>
          <th>Regi√≥n</th>
          <th>Subregi√≥n</th>
          <th>Creador</th>
        </tr>
      </thead>
      <tbody>
        <% if (paises && paises.length > 0) { %>
          <% paises.forEach((pais, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= pais.id || 'N/A' %></td>
              <td><%= pais.name %></td>
              <td><%= pais.capital %></td>
              <td><%= Array.isArray(pais.borders) ? pais.borders.join(', ') : pais.borders || 'N/A' %></td>
              <td><%= pais.gini || 'No especificado' %></td>
              <td><%= pais.population.toLocaleString() %></td>
              <td><%= pais.area ? pais.area.toLocaleString() + ' km¬≤' : 'N/A' %></td>
              <td><%= Array.isArray(pais.timezones) ? pais.timezones.join(', ') : pais.timezones || 'N/A' %></td>
              <td><%= pais.region || 'N/A' %></td>
              <td><%= pais.subregion || 'N/A' %></td>
              <td><%= pais.creador || 'ISABENSA' %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="12" class="sin-datos">‚ö†Ô∏è No hay datos disponibles</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <div class="volver">
    <a href="/" class="btn-volver">‚Üê Volver al Inicio</a>
  </div>
</div>
