<div class="contenedor-dashboard">
  <h2 class="titulo-dashboard">🌍 Agregar un Nuevo País</h2>

  <% if (errors && errors.length > 0) { %>
    <div class="error-messages">
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <% if (success) { %>
    <div class="success-message"><p><%= success %></p></div>
  <% } %>

  <form action="/paises/agregar" method="POST" class="formulario-pais">
    <div class="form-grupo"><label for="name">Nombre:</label><input type="text" id="name" name="name" required></div>
    <div class="form-grupo"><label for="capital">Capital:</label><input type="text" id="capital" name="capital" required></div>
    <div class="form-grupo"><label for="borders">Fronteras (separadas por comas):</label><input type="text" id="borders" name="borders"></div>
    <div class="form-grupo"><label for="area">Área (en km²):</label><input type="number" id="area" name="area" min="1"></div>
    <div class="form-grupo"><label for="population">Población:</label><input type="number" id="population" name="population" min="1"></div>
    <div class="form-grupo"><label for="gini">Índice GINI:</label><input type="number" id="gini" name="gini" min="0" max="100" step="0.01"></div>
    <div class="form-grupo"><label for="region">Región:</label><input type="text" id="region" name="region" required></div>
    <div class="form-grupo"><label for="subregion">Subregión:</label><input type="text" id="subregion" name="subregion" required></div>
    <div class="form-grupo"><label for="timezones">Zonas Horarias (separadas por comas):</label><input type="text" id="timezones" name="timezones"></div>

    <div class="botones-form">
      <button type="submit" class="btn-agregar">💾 Guardar</button>
      <button type="button" class="btn-volver" onclick="window.location.href='/paises/dashboard'">← Volver al Dashboard</button>
    </div>
  </form>
</div>
