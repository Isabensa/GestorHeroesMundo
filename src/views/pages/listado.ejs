<main class="main-content">
  <h1 class="listado-title">🦸‍♂️ Superhéroes Registrados en SuperANSES</h1>

  <!-- 🔘 Botones de acción -->
  <div class="acciones-dashboard">
    <button class="btn-agregar" onclick="window.location.href='/superheroes/add'">➕ Agregar Superhéroe</button>
    <button class="btn-editar" onclick="window.location.href='/superheroes/edit'">✏️ Editar Superhéroe</button>
    <button class="btn-eliminar" onclick="window.location.href='/superheroes/delete'">❌ Eliminar Superhéroe</button>
  </div>

  <!-- 📋 Tabla de Superhéroes -->
  <table class="superheroes-table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre del Superhéroe</th>
        <th>Nombre Real</th>
        <th>Edad</th>
        <th>Planeta de Origen</th>
        <th>Debilidad</th>
        <th>Poderes</th>
        <th>Aliados</th>
        <th>Enemigos</th>
        <th>Autor</th>
        <th>Fecha de Creación</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% superheroes.forEach(superheroe => { %>
        <tr>
          <td><%= superheroe._id %></td>
          <td><%= superheroe.nombreSuperHeroe %></td>
          <td><%= superheroe.nombreReal %></td>
          <td><%= superheroe.edad %></td>
          <td><%= superheroe.planetaOrigen %></td>
          <td><%= superheroe.debilidad %></td>
          <td><%= Array.isArray(superheroe.poderes) ? superheroe.poderes.join(', ') : superheroe.poderes %></td>
          <td><%= Array.isArray(superheroe.aliados) ? superheroe.aliados.join(', ') : superheroe.aliados %></td>
          <td><%= Array.isArray(superheroe.enemigos) ? superheroe.enemigos.join(', ') : superheroe.enemigos %></td>
          <td><%= superheroe.autor || '—' %></td>
          <td><%= new Date(superheroe.createdAt).toLocaleDateString('es-AR') %></td>
          <td class="acciones-fila">
           <button class="btn-ver" onclick="window.location.href='/'">Volver Inicio</button>

          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <div class="volver-inicio">
    <button class="btn-volver" onclick="window.location.href='/'">← Volver al Inicio</button>
  </div>
</main>
